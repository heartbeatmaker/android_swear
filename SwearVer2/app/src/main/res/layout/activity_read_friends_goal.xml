<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ReadFriendsGoal">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="632dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_marginBottom="70dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="YonJu의 약속"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="하루에 코드 만 줄씩 짜기 "
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="하드코딩을 위한 한 걸음"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            android:text="세부사항 (#12345)"
            android:textColor="#000000"
            android:textSize="16sp" />


        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="시작일"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="종료일"
                android:textSize="14sp"
                app:layout_column="0"
                app:layout_row="1" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="기간"
                android:textSize="14sp"
                app:layout_column="0"
                app:layout_row="2" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="보증금"
                android:textSize="14sp"
                app:layout_column="0"
                app:layout_row="3" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="2019.03.21"
                android:textSize="14sp"
                app:layout_row="0" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="2019.03.28"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="7일"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="2" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="500 P"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="3" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="94dp"
                android:padding="2dp"
                android:text="공유횟수"
                android:textSize="14sp"
                app:layout_column="0"
                app:layout_row="4" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="2번"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="4" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="열람횟수"
                android:textSize="14sp"
                app:layout_column="0"
                app:layout_row="5" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="3번"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="5" />

        </android.support.v7.widget.GridLayout>

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/constraint_bottom"
        android:layout_height="543dp">

        <TextView
            android:id="@+id/textView48"
            android:layout_width="370dp"
            android:layout_height="175dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/cardview_dark_background"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="- 하단 왼쪽 버튼: 친구가 쓴 보고서 열람이 가능합니다. \n- 하단 오른쪽 버튼: 친구에게 독려 메시지를 보낼 수 있습니다."
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.926" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_bottom"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"

        android:background="@drawable/grad_bg">

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/home"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_assignment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButton9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />

        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="31dp"
            android:layout_height="43dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton9"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>