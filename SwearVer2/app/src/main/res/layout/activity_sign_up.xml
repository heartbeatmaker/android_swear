<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/logoss" />


    <EditText
        android:id="@+id/signup_username_editText"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="#80DCDCDC"
        android:ems="30"
        android:inputType="textPersonName"
        android:hint="Username"
        android:fontFamily="sans-serif-light"
        android:drawableLeft="@drawable/ic_action_user"
        android:textAllCaps="false"
        android:textColor="#4B73E1"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/signup_email_editText"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_below="@+id/signup_username_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#80DCDCDC"
        android:ems="30"
        android:hint="Email"
        android:fontFamily="sans-serif-light"
        android:drawableLeft="@drawable/ic_action_email"
        android:textAllCaps="false"
        android:textColor="#4B73E1"
        android:textSize="30dp"
        android:inputType="textEmailAddress" />

    <LinearLayout
        android:id="@+id/verify_linearLayout"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_email_editText"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/signup_verify_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="12sp"
            android:gravity="right"
            android:paddingRight="5dp"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/signup_verify_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="중복확인" />
    </LinearLayout>

    <EditText
        android:id="@+id/signup_password_editText"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_below="@+id/verify_linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#80DCDCDC"
        android:ems="30"
        android:hint="Password"
        android:fontFamily="sans-serif-light"
        android:drawableLeft="@drawable/ic_action_password"
        android:textAllCaps="false"
        android:textColor="#4B73E1"
        android:textSize="30dp"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_below="@+id/signup_password_editText"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:orientation="vertical">


            <TextView
                android:id="@+id/signup_cofirm_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:background="@drawable/btn_bg"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical|center_horizontal"
                android:text="Sign up"
                android:textColor="#DCDCDC"
                android:textSize="20sp" />



        <!--<Button-->
            <!--android:id="@+id/button"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:text="소셜 로그인" />-->

        <TextView
            android:id="@+id/signup_alreadyHaveAccount_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/login"
            android:textSize="12sp"
            android:gravity="center"/>

    </LinearLayout>


</RelativeLayout>