<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/searchByEmail"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search by Email"/>

    <LinearLayout
        android:layout_below="@id/searchByEmail"
        android:id="@+id/fragment_search_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/fragment_findfriend_editText"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:imeOptions="actionSearch"
            android:layout_height="80dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_below="@id/searchByEmail" />

        <ImageButton
            android:id="@+id/fragment_findfriend_search_imageBtn"
            android:layout_width="50dp"
            android:layout_weight="0"
            android:layout_marginRight="10dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_search_black"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/fragment_findfriend_profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/fragment_search_linearLayout"
        android:background="@drawable/profile"/>

    <TextView
        android:id="@+id/fragment_result_textView"
        android:layout_below="@id/fragment_findfriend_profileImage"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="result"
        android:textSize="20sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/fragment_result_small_textView"
        android:layout_below="@id/fragment_result_textView"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="result_small"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/fragment_findfriend_add_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_marginTop="30dp"
        android:layout_below="@id/fragment_result_small_textView"
        android:layout_centerInParent="true"
        android:background="@drawable/grad_bg"/>

</RelativeLayout>