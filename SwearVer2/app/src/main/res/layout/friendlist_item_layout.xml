<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/friendlist_item_imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/profile"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/friendlist_item_textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:text="name"
        android:layout_below="@id/friendlist_item_imageView"/>

    <TextView
        android:id="@+id/friendlist_item_friendEmail"
        android:layout_below="@id/friendlist_item_textView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:textColor="#00ff0000"/>

</RelativeLayout>